/* pages/knowledgeDetails/knowledgeDetails.wxss */
.custom-header-goback .home-icon{
  width: 47rpx;
  height: 45rpx;
}
.knowledge-detail-body {
    width: 100%;
    min-height: 100vh;
}

.detail-img image {
    width: 100%;
}

.detail-content {
    padding: 48rpx 30rpx 50rpx 30rpx;
    border-top-left-radius: 20px;
    border-top-right-radius: 20px;
    background: #fff;
    box-shadow: 0 -30rpx 30rpx 5rpx rgba(185,177,172,.3);
    position: relative;
    margin-top: -50rpx;
}

.detail-share {
    position: absolute;
    top: -36rpx;
    right: 42rpx;
    width: 72rpx;
    height: 72rpx;
    background: #fff;
    text-align: center;
    line-height: 86rpx;
    border-radius: 50%;
    box-shadow: 0 0 20rpx 5rpx rgba(185,177,172,.3);
}
.detail-share button{
    background: #fff;
    border-radius: 50%;
    line-height: normal;
    padding: 0;
}
.detail-share button:after{
    border: none;
}
.detail-share image {
    width: 31rpx;
    height: 41rpx;
    margin-top: 16rpx;
}

.detail-title {
    font-size: 42rpx;
    color: #222;
    padding: 0 14rpx 42rpx 14rpx;
    border-bottom: 1px dashed #ccc;
    line-height: 1.5;
}

.details {
    padding: 50rpx 14rpx 0 14rpx;
    font-size: 30rpx;
    color: #222;
    line-height: 2;
}
