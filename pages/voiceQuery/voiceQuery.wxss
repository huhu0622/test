/* pages/voiceQuery/voiceQuery.wxss */

.custom-header-title {
    color: #fff;
    position: relative;
    top: -2rpx;
}
.custom-header-image image{
  width: 42rpx;
  height: 40rpx;
}
.voice-body {
    padding-top: 250rpx;
    background: linear-gradient(to bottom, #31a05f, #003e84);
    min-height: 100vh;
    box-sizing: border-box;
}

.top {
    text-align: center;
    color: #fff;
    width: 85%;
    margin: 0 auto;
}

.line-1 {
    font-size: 32rpx;
    margin-bottom: 44rpx;
}

.line-2 {
    font-size: 24rpx;
    margin-bottom: 16rpx;
}

.line-3 {
    width: 100%;
    position: relative;
    box-sizing: border-box;
}

.line-3 image {
    width: 100%;
}

.input-box {
    position: absolute;
    top: 14rpx;
    bottom: 20rpx;
    left: 18rpx;
    right: 18rpx;
    background: #41a198;
    text-align: center;
}

.input-box input {
    text-align: center;
    font-size: 60rpx;
    height: 100%;
    box-sizing: border-box;
}

.line-4 {
    font-size: 32rpx;
    margin-top: 10rpx;
}

.middle {
    width: 80%;
    margin: 0 auto;
}

.middle .result {
    font-size: 30rpx;
    color: #fff;
    padding-top: 30rpx;
    padding-bottom: 64rpx;
    border-bottom: 1px dashed #ccc;
}

.result image {
    width: 40rpx;
    height: 39rpx;
    position: relative;
    top: 10rpx;
}

.line-5 {
    position: relative;
    margin-top: 32rpx;
    text-align: center;
    padding-bottom: 76rpx;
    border-bottom: 1px dashed #ccc;
    color: #fff;
    height: 62rpx;
    line-height: 62rpx;
}

.line-5>view {
    font-size: 60rpx;
}

.line-5>image {
    width: 40rpx;
    height: 40rpx;
    position: absolute;
    top: 15rpx;
    right: 40rpx;
}

.belong-to>image {
    width: 60rpx;
    height: 57rpx;
    margin-right: 17rpx;
    position: relative;
    top: 10rpx;
}

.talk {
    color: #fff;
    padding-top: 84rpx;
    text-align: center;
}

.talk view {
    font-size: 24rpx;
    margin-bottom: 86rpx;
}

.talk .talk-img {
    width: 104rpx;
    height: 100rpx;
    background-repeat: no-repeat;
    background-position: center center;
    background-size: cover;
    margin-bottom: 0;
    margin: 0 auto;
    background-image: url('https://lajigo.sansunt.com/ftpimg/yuyinchaxun.svg');
}
.talk .yuyin_moving{
  width: 350rpx;
  background-image:url('https://lajigo.sansunt.com/ftpimg/yuyin_active.png');
}
.select-box {
    margin-top: 68rpx;
}

