.sure-cancel-btn {
    width: 100%;
    margin: 100rpx auto 0 auto;
    padding: 60rpx 17rpx 0 17rpx;
    border-top: 1px dashed #ccc;
}

.sure-cancel-btn view {
    display: inline-block;
    border-radius: 10px;
    text-align: center;
    height: 100rpx;
    line-height: 100rpx;
    color: #fff;
    font-size: 30rpx;
}

.sure-btn {
    width: 60%;
    margin-right: 20rpx;
    background: #1c8347;
}

.cancel-btn {
    width: 30%;
    background: #c5c5c5;
}

.person_result{
    position: absolute;
    top: 662rpx;
    left: 0;
    z-index: 1;
    padding-top: 20rpx;
}
.person_result .radio_row{
    margin-bottom: 30rpx;
}
.person_result .radio{
    background: #5AD28C;
    width: 248rpx;
    height: 88rpx;
    line-height: 88rpx;
    /* margin: 0 auto; */
    color: #fff;
    border-radius: 50rpx;
    padding-left: 40rpx;
    margin-bottom: 52rpx;
}
.radio_row van-col:nth-child(odd) .radio{
  float: right;
  margin-right: 30rpx;
}
.radio_row van-col:nth-child(even) .radio{
  margin-left: 30rpx;
}
.person_result .radio .van-radio__label{
    color: #fff;
}
.radio image{
  width: 36rpx;
  height: 36rpx;
  vertical-align: middle;
  position: relative;
  top: 20rpx;
}
.person_result .submit_box{
    border-top: 1px dashed #ccc;
    width: 90%;
    margin: 0 auto;
    padding-top: 88rpx;
    text-align: center;
}
.person_result .submit_box button:nth-child(1){
    background: #1C8347;
    width: 384rpx;
    height: 120rpx;
    display: inline-block;
    color: #fff;
    font-size: 48rpx;
    border-radius: 30rpx;
    margin-right: 32rpx;
}
.person_result .submit_box button:nth-child(2){
    background: #C5C5C5;
    width: 190rpx;
    height: 120rpx;
    display: inline-block;
    color: #fff;
    font-size: 48rpx;
    border-radius: 30rpx;
}
.result{
  height: 216rpx;
  box-sizing: border-box;
}
.result text{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}
