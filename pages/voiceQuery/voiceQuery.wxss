.radio view:last-child{
  line-height: 88rpx;
}
.item-box {
    border-radius: 50rpx;
    background: #5ad28c;
    color: #fff;
    width: 92%;
    padding: 20rpx 0;
    font-size: 32rpx;
    text-align: center;
}

.item-box view {
    display: inline-block;
    line-height: 35rpx;
}

.item-circle {
  display: inline-block;
  width: 35rpx;
  height: 35rpx;
  border-radius: 50%;
  border: 1px solid #0f7038;
  margin-right: 16rpx;
  background: #fff;
  position: relative;
  top: 7rpx;
}

.item-circle .image{
    display: none;
    width: 100%;
    height: 100%;
}

.active-select .image{
    display: inline-block;
    vertical-align: middle;
    position: relative;
    top: -7rpx;
}
