.mapping-body {
    position: fixed;
    width: 100%;
    left: 0;
    bottom: 0;
    box-sizing: border-box;
    z-index: 10;
    color: #fff;
}

.headBg {
    width: 100%;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 10;
}

.custom-header {
    position: fixed;
    top: 0;
    left: 0;
    color: #fff;
    z-index: 15;
}

.custom-header-goback, .custom-header-image, .custom-header-title {
    float: left;
}

.custom-header .back_icon {
    width: 20rpx;
    height: 34rpx;
    margin-top: 8rpx;
}

.custom-header .photo_icon {
    width: 36rpx;
    height: 42rpx;
}

.map {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 100%;
}

.function-btn {
    padding: 0 47rpx 150rpx 40rpx;
    position: relative;
    z-index: 10;
}

.left-function {
    float: left;
}
.right-function{
  float: right;
}
.right-function cover-image{
  width: 42rpx;
  height: 42rpx;
  vertical-align: middle;
  position: relative;
  top: 17rpx;
}
.left-item {
    float: left;
    text-align: center;
    width: 100rpx;
}

.left-img-box {
    width: 50rpx;
    height: 50rpx;
    border-radius: 50%;
    background: #5ad28c;
    padding: 14rpx;
    box-sizing: border-box;
    margin: 15rpx auto;
    box-shadow: 0 0 5rpx 5rpx rgba(0,0,0,.2);
}

.left-item cover-view {
    font-size: 28rpx;
}
.left-text{
  color: #0f7038;
  text-shadow: 0 0 5rpx rgba(0,0,0,.2);
}
.dot, .dot-click {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 150rpx;
    margin-bottom: -50rpx;
    border-top-left-radius: 20px;
    border-top-right-radius: 20px;
    background: rgba(15, 112, 56, 0.6);
    color: #fff;
    box-sizing: border-box;
    padding: 28rpx 47rpx 28rpx 63rpx;
    z-index: 10;
    transition: all .5s linear;
}
.circle_white{
  display: inline-block;
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
  background: #fff;
  margin-right: 10rpx;
  position: relative;
  top: -5rpx;
}
.green-line{
  background: rgba(15, 112, 56, 0.6);
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 200rpx;
  z-index: -1;
}
.dot cover-view, .line-1 cover-view {
    float: left;
    font-size: 30rpx;
    line-height: 40rpx;
}

.dot cover-image, .line-1 cover-image {
    float: right;
    width: 40rpx;
    height: 40rpx;
    vertical-align: middle;
    padding: 5rpx 25rpx 5rpx 200rpx;
}

.dot-click {
    height: auto;
    background: rgba(15, 112, 56, 1);
    padding: 70rpx 58rpx 115rpx 58rpx;
}
.bottom0{
  bottom: 0;
}
.search-box {
    width: 100%;
    height: 114rpx;
    line-height: 114rpx;
    border-radius: 58rpx;
    background: #fff;
    position: relative;
}

.input-text, .input {
    height: 114rpx;
    line-height: 114rpx;
    color: #5ad28c;
    padding-left: 40rpx;
}

.input {
    margin-top: -114rpx;
}

.search-box cover-image {
    width: 59rpx;
    height: 59rpx;
    position: absolute;
    right: 34rpx;
    top: 30rpx;
}

.alert-box {
    position: relative;
    z-index: 10;
    width: 80%;
    margin: 250rpx auto;
    text-align: center;
    /* opacity: 0;
    transition:  all 1s */
}
.active {
    /* margin-top: 150px;
    opacity: 1; */
}
.alert{
    position: relative;
    width: 100%;
    background: #0f7038;
    border-radius: 40rpx;
    padding: 60rpx 40rpx 0 40rpx;
    box-sizing: border-box;
}
.close-pic {
    width: 42rpx;
    height: 42rpx;
    position: absolute;
    top: 20rpx;
    right: 20rpx;
}

.classify-pic {
    position: relative;
    z-index: 20;
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    background: #fff;
    margin: 10rpx auto -65rpx auto;
    text-align: center;
    overflow: auto;
    box-shadow: 0 0 5rpx 5rpx rgba(15,112,56,.1);
}

.classify-pic cover-image {
    width: 67rpx;
    height: 81rpx;
    margin: 20rpx auto;
}

.alert-title {
    font-size: 48rpx;
    color: #fff;
    padding: 35rpx 0 24rpx 0;
}

.alert-description {
    font-size: 24rpx;
    color: #fff;
    margin-bottom: 24rpx;
}

.alert-points {
    font-size: 32rpx;
    width: 100%;
    overflow: hidden;
    color: #5ad28c;
}

.alert-line-1 {
    padding-bottom: 42rpx;
}

.alert-line-2 {
    padding: 25rpx 36rpx 40rpx 36rpx;
}

.dashed-line {
    width: 100%;
    height: 1px;
    background: #5ad28c;
}

.marker {
    font-size: 28rpx;
    color: #fff;
    margin-bottom: 30rpx;
}

.right {
    float: left;
    padding: 20rpx 35rpx;
    border-radius: 50rpx;
}
.zan-bg{
  background: #1dcc66;
}
.calcel-zan{
  background: #449867;
}
.right cover-image, .wrong cover-image {
    width: 51rpx;
    height: 49rpx;
    vertical-align: middle;
    margin-right: 20rpx;
    float: left;
}

.right cover-view, .wrong cover-view {
    float: left;
    font-size: 40rpx;
    color: #fff;
    line-height: 49rpx;
}

.wrong {
    float: right;
    padding: 20rpx 35rpx;
    border-radius: 50rpx;
}

.alert-line-3 {
    padding: 39rpx 0 46rpx 0;
    position: relative;
    line-height: 2;
}

.no-comment {
    font-size: 28rpx;
    color: #5ad28c;
}

.more-comment {
    position: absolute;
    top: 39rpx;
    right: 0;
    width: 10rpx;
    height: 30rpx;
    padding: 0 20rpx;
}

.has-comment cover-image {
    width: 23rpx;
    height: 20rpx;
}

.top-quotation {
    float: left;
    transform: rotate(180deg);
    margin-right: 5rpx;
}

.has-comment cover-view {
    float: left;
    max-width: 80%;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    color: #fff;
    font-size: 28rpx;
}

.bottom-quotation {
    float: left;
    margin-left: 5rpx;
}

.wrong cover-image {
    transform: rotate(180deg);
}
